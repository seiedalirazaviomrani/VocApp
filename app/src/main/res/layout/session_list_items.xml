<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_eighty_eight"
    android:background="@android:color/white"
    android:minHeight="@dimen/dp_eighty_eight"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/sessionImg"
        android:layout_width="@dimen/dp_eighty_eight"
        android:layout_height="@dimen/dp_eighty_eight"
        android:contentDescription="@string/image_of_session"
        android:src="@drawable/baseline_import_contacts_black_48" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_eighty_eight"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sessionName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:padding="@dimen/dp_sixteen"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            tools:text="Session 1" />

        <TextView
            android:id="@+id/sessionDescription"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:paddingStart="@dimen/dp_sixteen"
            android:paddingEnd="@dimen/dp_sixteen"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold"
            tools:text="Friendship" />

    </LinearLayout>
</LinearLayout>